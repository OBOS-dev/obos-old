{
  "version": "0.2.1",
  "defaults": {},
  "configurations": [
    {
      "type": "cppdbg",
      "name": "oboskrnl-qemu", // a friendly name for the debug configuration 
      "project": "CMakeLists.txt",
      "projectTarget": "oboskrnl",
      "program": "oboskrnl",
      "MIMode": "gdb",
      "customLaunchSetupCommands": [
        {
          "text": "add-symbol-file C:/Code/obos/out/oboskrnl",
          "description": "Adds the kernel's symbol file."
        },
        {
          "text": "add-symbol-file C:/Code/obos/out/ps2Keyboard"
        },
        {
          "text": "target remote :1234",
          "description": "Connects to qemu's gdb stub."
        },
        {
          "text": "set disassembly-flavor intel",
          "description": "Makes gdb disassemble in intel syntax instead of AT&T syntax.",
          "ignoreFailures": true
        }
      ],
      "externalConsole": false,
      "remoteMachineName": "2081433904;127.0.0.1 (username=omar, port=2222, authentication=Password)",
      "remotePrelaunchWait": "1",
      "miDebuggerPath": "gdb",
      "setupCommands": [
      ],
      "pipeTransport": { "disable": true },
      "showDisplayString": true,
      "targetArchitecture": "x86_64",
      "miDebuggerServerAddress": ":1234"
    }
  ]
}